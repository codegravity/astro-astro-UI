---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import Logo from '@components/Logo.astro';
import { Icon } from 'astro-icon/components';

---

<header class="sticky inset-x-0  z-50 flex w-full flex-wrap text-sm md:flex-nowrap md:justify-start ">
	<nav class="relative w-full  border border-yellow-100/40 bg-white/50 px-4 py-3 backdrop-blur-md  md:flex md:items-center md:justify-between sm:px-0 md:px-2 md:py-0 lg:px-8 xl:mx-auto" aria-label="Global">
	<div class="navbar px-0 py-0 w-full">
		<div class="navbar-start w-full min-w-sm">	
			<div class="dropdown ">			
				<div tabindex="0" role="button" class="btn btn-ghost px-0 lg:hidden">
					<svg class="bars" viewBox="0 0 100 100" onclick="this.classList.toggle('active')">
					<path class="line top" d="m 30,33 h 40 c 13.100415,0 14.380204,31.80258 6.899646,33.421777 -24.612039,5.327373 9.016154,-52.337577 -12.75751,-30.563913 l -28.284272,28.284272"></path>
					<path class="line middle" d="m 70,50 c 0,0 -32.213436,0 -40,0 -7.786564,0 -6.428571,-4.640244 -6.428571,-8.571429 0,-5.895471 6.073743,-11.783399 12.286435,-5.570707 6.212692,6.212692 28.284272,28.284272 28.284272,28.284272"></path>
					<path class="line bottom" d="m 69.575405,67.073826 h -40 c -13.100415,0 -14.380204,-31.80258 -6.899646,-33.421777 24.612039,-5.327373 -9.016154,52.337577 12.75751,30.563913 l 28.284272,-28.284272"></path>
					</svg>
				</div>
				<div tabindex="-1" class=" menu  menu-sm dropdown-content bg-base-100 rounded-box z-10 mt-3 w-90 pt-5 pl-0 shadow absolute -left-2">
					<div  class="internal-links flex flex-col"  >
						<HeaderLink href="/">
							<Icon name="mingcute--home-4-line" class=" text-4xl "/>
						</HeaderLink>
						<HeaderLink href="/tandem" class="max-w-fit ">Tandem</HeaderLink>
						<HeaderLink href="/about" class="max-w-fit ">Kurser</HeaderLink>
						<HeaderLink href="/blog" class="max-w-fit">Resor</HeaderLink>
						<HeaderLink href="/blog" class="max-w-fit">Butik</HeaderLink>	
						
						<div class=" drop  border-t-2 border--skysport-dark flex flex-row justify-end ">
							<div class="drawer drawer-end w-max-30%">
								<input id="kontakt-drawer" type="checkbox" class="drawer-toggle" />
								<div class="drawer-content  py-0 pl-0 pt-3 ">
									<label for="kontakt-drawer" class="pt-0.5 text-secondary/90 drawer-button btn btn-primary btn-ghost hover:text-white   ">Kontakt</label>
								</div>
								<div class="drawer-side w-100% fixed -left- h-full">
									<label for="kontakt-drawer" aria-label="close sidebar" class="drawer-overlay">
										<Icon name="flowbite--close-outline" class="font-bold text-4xl pl-2"/>
									</label>
									<ul class="menu bg-base-200 min-h-full w-80 pl-1 pt-0 pr-0">
										<li class="flex-row-reverse">
											<label for="kontakt-drawer" aria-label="close sidebar" class="drawer-overlay">
												<Icon name="flowbite--close-outline-black" class="font-bold text-3xl "/>
											</label>
										</li>
										<li><a><Icon name="mdi-light--phone" class="font-bold text-2xl  "/> add tel nummer</a></li>
										<li><a><Icon name="streamline-cyber--email-2-1" class="font-bold text-2xl  "/>email adress???</a></li>
									</ul>
								</div>
							</div><!-- end drawer -->
							<a href="https://facebook.com/skysport.se" target="_blank">
								<Icon name="logos--facebook (5)" class=" text-4xl  "/>
								<span class="sr-only">Folje skysport på FaceBook</span>
							</a>
							<a href="https://instagram.com/skysport_are" target="_blank">
								<span class="sr-only">Folje skysport på Instagram</span>
								<Icon name="logos--instagram-icon (5)" class=" text-4xl pl-2"/>
							</a>
							<a href="https://vimeo.com/user58363115?fbclid=IwAR3oPCNzTwYeAfxtt3xHQBs413hMlK__4m6Gh4XUANqIiAzMZ70VkmA0_A8" target="_blank">
								<span class="sr-only">Folje skysport på Vimeo</span>
								<Icon name="logos--vimeo-icon (1)" class=" text-4xl pl-2"/>
							</a>			
						</div>
					</div>	
				</div>		
			</div><!-- end dropdown  -->
			<Logo />
		</div>
		<div class="navbar-center hidden lg:flex menu menu-horizontal px-1">
			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/tandem">Tandem</HeaderLink>
				<HeaderLink href="/about">Kurser</HeaderLink>
				<HeaderLink href="/blog">Resor</HeaderLink>
				<HeaderLink href="/blog">Butik</HeaderLink>	
			</div>
		</div>
		<div class="navbar-end">
			<div class="social-links items-center">	
				<a href="https://facebook.com/skysport.se" target="_blank">
					<Icon name="logos--facebook (5)" class=" sm:text-2xl md:text-3xl xl:text-5xl"/>
					<span class="sr-only">Follow Astro on Mastodon</span>
				</a>
				<a href="https://instagram.com/skysport_are" target="_blank">
					<span class="sr-only">Follow Astro on Twitter</span>
					<Icon name="logos--instagram-icon (5)" class=" sm:text-3xl md:text-3xl xl:text-5xl "/>
				</a>
				<a href="https://vimeo.com/user58363115?fbclid=IwAR3oPCNzTwYeAfxtt3xHQBs413hMlK__4m6Gh4XUANqIiAzMZ70VkmA0_A8" target="_blank">
					<span class="sr-only">Go to Astro's GitHub repo</span>
					<Icon name="logos--vimeo-icon (1)" class=" sm:text-3xl md:text-3xl xl:text-5xl "/>
				</a>
				<div class="drawer drawer-end ">
					<input id="kontakt-drawer" type="checkbox" class="drawer-toggle" />
					<div class="drawer-content  py-4 pl-4">
						<label for="kontakt-drawer" class="pt-0.5 text-secondary/90 drawer-button btn btn-primary btn-ghost hover:text-white btn-xs sm:btn-sm md:btn-md lg:btn-lg xl:btn-xl">Kontakt</label>
					</div>
					<div class="drawer-side ">
						<label for="kontakt-drawer" aria-label="close sidebar" class="drawer-overlay">X</label>
						<ul class="menu bg-base-200 min-h-full w-80 p-4">
							<li><a>
								<Icon name="mdi-light--phone" class=" sm:text-3xl md:text-3xl xl:text-5xl "/>
								Sidebar Item 1</a></li>
							<li><a>Sidebar Item 2</a></li>
						</ul>
					</div>
				</div>
				</div><!-- end social links -->
			</div>
		</div><!-- end daisy nav bar -->
	</nav>
</header>
<style>
	header {
		margin: 0 auto;
		padding: 0;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 3px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 1019px) {
		nav a {
			padding: 0.5em 0.5em;
			color: var(--black);
			text-decoration: none;
		}
		nav a.active {
			text-decoration-line: underline;
			text-decoration-color: var(--skysport-600);
			text-underline-offset: 4px;
			text-decoration-thickness: 2px;
			border: none;
		}
		nav a:hover {
			text-decoration-line: underline;
			text-decoration-color: var(--orange-600);
			text-underline-offset: 4px;
			text-decoration-thickness: 4px;

		}
	}
	@media (max-width: 869px) {
		.social-links {
			display: none;
		}
	}

.trigger {
    position: absolute;
    z-index: 2;
    left: 50%;
    top: 50%;
    border: 2px solid #fff;
    border-radius: 10px;
    transform: translateX(-50%) translateY(-50%);
}

.bars {
  width: 60px;
  cursor: pointer;
}
.bars .line {
  fill: none;
  stroke: #22427A;
  stroke-width: 4;
  stroke-linecap: square;
  transition: stroke-dasharray 400ms,  stroke-dashoffset 400ms;
}
.bars .line.top {
  stroke-dasharray: 40 172;
}
.bars .line.middle {
  stroke-dasharray: 40 111;
}
.bars .line.bottom {
  stroke-dasharray: 40 172;
}
.bars.active .top {
  stroke-dashoffset: -132px;
}
.bars.active .middle {
  stroke-dashoffset: -71px;
}
.bars.active .bottom {
  stroke-dashoffset: -132px;
}

  </style>
